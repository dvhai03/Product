<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#59F3ECEC"
    tools:context=".View.DatHang_Activity">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="650dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar_out" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginVertical="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="10dp"
                android:src="@drawable/baseline_map_24" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginVertical="2dp"
                    android:text="Địa chỉ nhận hàng"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginBottom="3dp"
                    android:text="Họ và tên : Đỗ Văn Hải"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginBottom="3dp"
                    android:text="Số điện thoại : 0356002574"
                    android:textSize="18dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginBottom="3dp"
                    android:text="Địa chỉ : động phí phương tú ứng hòa"
                    android:textSize="18dp" />
            </LinearLayout>
            <TextView
                android:id="@+id/id_address"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="30dp"
                android:textColor="#2196F3"
                android:text="Thay đổi"
                android:layout_gravity="center"
               />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content"
            android:background="@drawable/view_bg_edit"
            android:padding="5dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_muangay"
                android:layout_width="100dp"
                android:layout_height="100dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_tensp_muangay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ao sieu nhan" />

                <TextView
                    android:id="@+id/txt_giatien_muangay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2000.000 vnd"
                    android:textColor="#F42020" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Số lượng : "
                        android:gravity="center"
                        android:textSize="20dp"/>
                    <TextView
                        android:id="@+id/txt_soluong_muangay"
                        android:layout_width="30dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="@drawable/view_bg_edit"
                        android:text="1"/>

                </LinearLayout>
                <TextView
                    android:id="@+id/txt_sum_muangay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tổng : 2000.000 vnd"
                    android:textColor="#F42020"
                    android:textSize="20dp"

                    />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginBottom="20dp"

            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginHorizontal="10dp"
                    android:src="@drawable/baseline_wysiwyg_24" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="Chi tiết thanh toán"/>
            </LinearLayout>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Tổng tiền hàng"/>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Tổng thanh toán"/>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:text="Tổng thanh toán"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:gravity="bottom"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="top"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:textSize="20dp"
                android:text="Tổng thanh toán" />
            <TextView
                android:id="@+id/tong_thanhtoan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:textSize="20dp"
                android:textColor="#F44336"
                android:text="500.000 vnd" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="150dp"
            android:id="@+id/btn_muangay"
            android:layout_height="60dp"
            android:backgroundTint="#F11303"
            android:text="mua ngay"
            android:textColor="@color/white" />
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>