<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:orientation="vertical"

    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/view_bg_edit"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_dathang"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txt_tensp_dathang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ao sieu nhan"/>

            <TextView
                android:id="@+id/txt_giatien_dathang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2000.000 vnd"
                android:textColor="#F42020"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Số lượng : "
                  android:gravity="center"
                  android:textSize="20dp"/>
                <TextView
                    android:id="@+id/txt_soluong_dathang"
                    android:layout_width="30dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/view_bg_edit"
                    android:text="1"/>

            </LinearLayout>
            <TextView
                android:id="@+id/txt_sum_dathang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng : 2000.000 vnd"
                android:textColor="#F42020"
                android:textSize="20dp"

                />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>