<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_viewdialog"
    android:layout_height="match_parent">
   <LinearLayout
       android:padding="10dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
       <ImageView
           android:layout_width="200dp"
           android:id="@+id/img_anh"
           android:layout_height="200dp"/>
     <LinearLayout
         android:layout_width="match_parent"
         android:orientation="vertical"
         android:padding="8dp"
         android:layout_marginLeft="10dp"
         android:layout_height="wrap_content">
         <TextView
             android:layout_width="wrap_content"
             android:id="@+id/txt_namesp"
             android:layout_height="wrap_content"
             android:text="Áo len"
             android:textSize="20dp"
             />
         <TextView
             android:layout_gravity="center"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Số lượng"
             android:textSize="20dp"
             android:layout_marginTop="30dp"
             />

     </LinearLayout>
   </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:textSize="20dp"
            android:layout_marginRight="10dp"
            android:text="Số Lượng : "/>

           <androidx.appcompat.widget.AppCompatButton
               android:id="@+id/btn_giam"
               android:layout_width="50dp"
               android:text="-"
               android:textSize="20dp"
               android:layout_height="50dp"/>
        <TextView
            android:id="@+id/txt_soluong"
            android:layout_width="50dp"
            android:layout_marginHorizontal="10dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:gravity="center"
            android:background="@drawable/view_bg_edit"
            android:text="1"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_tang"
            android:layout_width="50dp"
            android:text="+"
            android:textSize="20dp"
            android:layout_height="50dp"/>
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/addgio"
        android:layout_width="match_parent"
        android:layout_marginVertical="10dp"
        android:textSize="20dp"
        android:layout_height="wrap_content"
        android:text="Thêm vào giỏ hàng"/>

</LinearLayout>