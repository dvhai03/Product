<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/view_bg_edit"
        android:padding="5dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_donhang"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txt_tensp_donhang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ao sieu nhan"/>

            <TextView
                android:id="@+id/txt_giatien_donhang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2000.000 vnd"
                android:textColor="#F42020"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Số lượng : "
                  android:gravity="center"
                  android:textSize="20dp"/>
                <TextView
                    android:id="@+id/txt_soluong_donhang"
                    android:layout_width="30dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/view_bg_edit"
                    android:text="1"/>
            </LinearLayout>
            <TextView
                android:id="@+id/txt_sum_donhang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng : 2000.000 vnd"
                android:textColor="#F42020"
                android:textSize="20dp"

                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_aciton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:backgroundTint="#E6FA3627"
                android:textColor="@color/white"
                android:text="Hủy đơn hàng"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>