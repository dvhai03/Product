<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:id="@+id/topnavogation"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/ed_search"
                android:layout_width="280dp"
                android:layout_height="40dp"
                android:layout_marginVertical="10dp"
                android:backgroundTint="#F1E6E6"
                android:layout_marginLeft="5dp"
                android:background="@drawable/view_bg_edit"
                android:hint="Tìm Kiếm"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:inputType="none"
                android:focusable="false"
                android:textSize="14dp" />
        </LinearLayout>
        <ImageView
            android:id="@+id/img_giohang"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"

            android:layout_toLeftOf="@id/icon_mess"
            android:src="@drawable/baseline_shopping_cart_24" />

        <ImageView
            android:id="@+id/icon_mess"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="14dp"

            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/conversation" />
    </RelativeLayout>

</RelativeLayout>